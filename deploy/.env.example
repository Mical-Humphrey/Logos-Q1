# Copy to .env and adjust values for your environment.
LOGOS_ENV=paper
LOGOS_SEED=42

# Orchestration command override for the runner container.
RUNNER_CMD=python -m logos.run --mode paper --symbol BTC/USD --label docker-regression

# Monitoring configuration.
LOGOS_ALERT_WEBHOOK=https://hooks.example.com/token
LOGOS_ALERT_CHANNEL=logos-ops
LOGOS_SENTINEL_FILE=/app/logs/live/heartbeat.json
LOGOS_SENTINEL_STALE_SECONDS=900
LOGOS_DISK_THRESHOLD=85
LOGOS_MONITOR_STATE=/app/logs/monitor_state.json
MONITOR_INTERVAL=300

# Backup scheduling.
BACKUP_DEST=/app/backups
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=14

# Janitor scheduling.
JANITOR_INTERVAL=21600
JANITOR_KEEP_DAYS=14
JANITOR_LOG_RETENTION_DAYS=30
